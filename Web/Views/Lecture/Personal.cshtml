            toolbar: '#toolbar',//工具按钮用哪个容器
            toolbarAligh: 'left',//工具栏对齐方式
            buttonsAligh: 'right',//按钮对齐方式

            sortOrder: "asc",//排序方式
            locale: 'zh-CN',//中文支持
            sidePagination: 'client', // 设置为服务器端分页

            columns: [{
                checkbox: true
            }, {
                field: 'Id',
                title: '讲座信息Id',
                visible: false,
                align: 'center',
                valign: 'middle'
            }, {
                field: 'Lecture.Subject',
                title: '讲座信息名',
                align: 'center',
                valign: 'middle'
            }, {
                field: 'User.Name',
                title: '负责人',
                align: 'center',
                valign: 'middle'
            }, {
                title: '开始时间',
                align: 'center',
                valign: 'middle',
                formatter: function (value, row, index) {
                    return changeDateFormat(row.Lecture.LectureTime).replace('-','/').replace('-','/')+" "+changeTimeFormat(row.Lecture.LectureTime);
                }
            }, {
                title: '报名截止时间',
                align: 'center',
                valign: 'middle',
                formatter: function (value, row, index) {
                    return changeDateFormat(row.Lecture.DeathLine).replace('-','/').replace('-','/');
                },

            }, {
                title: '实际人数',
                field: 'Lecture.RealPeople',
                align: 'center',
                valign: 'middle',
            }, {
                field: 'Place.PlaceName',
                title: '举办地点',
                align: 'center',
                valign: 'middle'
            }, {
                field: 'Lecture.State',
                title: '审核理由',
                align: 'center',
                valign: 'middle',
                formatter: function (value, row, index) {
                    let state = "";
                    if (value == 0 || value == 3) {
                        state = "待审核";
                    } else if (value == 1) {
                        state = "审核通过";
                    } else if (value == 2) {
                        state = "审核未通过";
                    }
                    return state;
                },

            }, {
                title: '操作',
                align: 'center',
                valign: 'middle',
                formatter: function (value, row, index) {
                    let str = "<button onclick='Edit(" + JSON.stringify(row) +
                        ")' data-toggle='modal' data-target='#EditModal' class='btn btn-default btn-sm'>" +
                        "<span class='glyphicon glyphicon-pencil' aria-hidden='true'>修改</span></button>" +
