    <!--表格加载-->
    <script>
        $("#LectureList").bootstrapTable({
            url: "/Lecture/GetPersonalAllLecture?Num=@Num&Role=@Role",// 获取表格数据的url
            method: 'post',//请求方式
            dataType: "json",
            dataField: "rows",
            classes: 'table',//边框
            undefinedText: '',//当数据为 undefined 时显示的字符
            pagination: true,//启动分页
