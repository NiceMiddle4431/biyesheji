    <![endif]-->
</head>

<body>

    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->

    <div id="login-page">
        <div class="container">
            <div class="form-login">
                <h2 class="form-login-heading">登录</h2>
                <div class="login-wrap">
                    <input id="Num" type="text" class="form-control" placeholder="账号" autofocus>
                    <br>
                    <input id="Password" type="password" class="form-control" placeholder="密码">
                    <label class="checkbox">
                    </label>
                    <button id="BtnLogin" class="btn btn-theme btn-block" type="submit"><i class="fa fa-lock"></i> 登录</button>
                    <hr>
                </div>
            </div>
        </div>
    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>

    <!--BACKSTRETCH-->
    <!-- You can use an image of whatever size. This script will stretch to fit in any screen size.-->
    <script type="text/javascript" src="/assets/js/jquery.backstretch.min.js"></script>
    <script>
        $.backstretch("/assets/img/login-bg.jpg", {speed: 500});
    </script>


</body>
</html>

<script>
    $("#BtnLogin").click(function () {
        $.ajax({
            url: "/Home/Check",
            async:false,
            data: {
                Num: $("#Num").val(),
                Password: $("#Password").val()
            },
            type: "POST",
            dataType: "json",
            success: function (result) {
                if (result == -2 || result == -3) {
                    window.location.replace("/Lecture/Index");
                } else {
                    alert("账号或者密码错误");
                }
            }
        })
    })
</script>

