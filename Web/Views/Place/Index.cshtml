
@{
    ViewBag.Title = "PlaceIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int ArchitectureId = ViewBag.ArchitectureId;
}

<!--表格开始-->
<div class="col-lg-12 col-xs-12">
    <table id="PlaceList"></table>
</div><!-- /col-lg-12 -->
<!--表格结束-->
<!--操作按钮，场地的多条删除和添加开始-->
<div class="btn-group pull-right" id="toolbar">
    <button id="AddPlace" type="button" class="btn btn-default" data-toggle='modal' data-target='#AddModal'>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>添加
    </button>
    <button id="AddPlaces" type="button" class="btn btn-default" data-toggle='modal' data-target='#AddExcel'>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>批量添加
    </button>
    <button id="DeletePlaces" type="button" class="btn btn-default" style="">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
    </button>
</div>
<!--操作按钮，场地的多条删除和添加结束-->
<!--添加时模态框-->
<div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="AddModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="AddModalLabel">添加场地信息</h4>
            </div>
            <div class="modal-body">
                <form id="EditForm" class="form-horizontal style-form" method="post" action="##">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">学号</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control round-form" id="AddPlaceNum" name="AddtPlaceNum">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">场地姓名</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control round-form" id="AddPlaceName" name="AddPlaceName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-sm-3 control-label">性别</label>
                        <div class="radio">
                            <label class="col-sm-2 col-sm-2 control-label">
                                <input type="radio" name="AddSex" id="AddSex" value="1">
                                男
                            </label>
                            <label class="col-sm-2 col-sm-2 control-label">
                                <input type="radio" name="AddSex" id="AddSex" value="0">
                                女
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">学校</label>
                        <div class="col-sm-6">
                            <select class="form-control round-form" id="AddSchool" ,name="AddSchool"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">班级</label>
                        <div class="col-sm-6">
                            <select class="form-control round-form" id="AddClass" name="AddtClass"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">场地密码</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control round-form" id="AddPlacePWD" name="AddPlacePWD">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="AddClose">关闭</button>
                <button type="submit" class="btn btn-primary" id="AddSubmit">提交</button>
            </div>
        </div>
    </div>
</div>
<!--添加时模态框结束-->
<div class="modal fade" id="AddExcel" tabindex="-1" role="dialog" aria-labelledby="AddModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal style-form" method="post" action="/Place/AddExcel" enctype="multipart/form-data">

                    <div class="form-group">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">请选择Excel文件</h4>
                        </div>
                        <div class="modal-body">
                            <input type="file" class="form-control" id="txt_file" name="txt_file" accept="xlsx/*" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal" id="AddClose">关闭</button>
                        <button type="submit" class="btn btn-primary" id="AddExcelSubmit">提交</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--修改时模态框-->
<div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="EditModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="EditModalLabel">修改场地信息</h4>
            </div>
            <div class="modal-body">
                <form id="EditForm" class="form-horizontal style-form" method="post" action="##">
                    <div class="form-group hidden">
                        <label class="col-sm-2 col-sm-2 control-label">Id</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control round-form" id="EditId" name="EditId">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">学号</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control round-form" id="EditPlaceNum" name="EditPlaceNum">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">场地姓名</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control round-form" id="EditPlaceName" name="EditPlaceName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-sm-3 control-label">性别</label>
                        <div class="radio">
                            <label class="col-sm-2 col-sm-2 control-label">
                                <input type="radio" name="EditSex" id="EditSex1" value="1">
                                男
                            </label>
                            <label class="col-sm-2 col-sm-2 control-label">
                                <input type="radio" name="EditSex" id="EditSex0" value="0">
                                女
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">学校</label>
                        <div class="col-sm-6">
                            <select class="form-control round-form" id="EditSchool" ,name="EditSchool"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">班级</label>
                        <div class="col-sm-6">
                            <select class="form-control round-form" id="EditClass" name="EditClass"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">场地密码</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control round-form" id="EditPlacePWD" name="EditPlacePWD">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="EditClose">关闭</button>
                <button type="submit" class="btn btn-primary" id="EditSubmit">提交</button>
            </div>
        </div>
    </div>
</div>
<!--修改时模态框结束-->
@section javascript{
    <link href="~/assets/bootstraptable/src/bootstrap-table.css" rel="stylesheet" />
    <script src="~/assets/bootstraptable/src/bootstrap-table.js"></script>

    <!--表格加载-->
    <script>
        $("#PlaceList").bootstrapTable({
            url: "/Place/GetPlace?ArchitectureId=" + @ArchitectureId,// 获取表格数据的url
            method: 'post',//请求方式
            dataType: "json",
            dataField: "rows",
            classes: 'table',//边框
            undefinedText: '',//当数据为 undefined 时显示的字符
            pagination: true,//启动分页
            striped: true,  //表格显示条纹，默认为false
            pagination: true, // 在表格底部显示分页组件，默认false
            pageList: [10, 25, 50], // 设置页面可以显示的数据条数
            pageSize: 10, // 页面数据条数
            pageNumber: 1, // 首页页码
            showColumns: true,  //显示下拉框勾选要显示的列
            showRefresh: false,  //显示刷新按钮
            showToggle: false,//显示一行是否改成竖着
            showPaginationSwitch: true,//是否显示 下面的分页框
            search: true, //显示搜索框
            //toolbar操作
            toolbar: '#toolbar',//工具按钮用哪个容器
            toolbarAligh: 'left',//工具栏对齐方式
            buttonsAligh: 'right',//按钮对齐方式

            sortOrder: "asc",//排序方式
            locale: 'zh-CN',//中文支持
            sidePagination: 'client', // 设置为客户端分页


            columns: [{
                checkbox: true
            }, {
                field: 'Id',
                title: '场地Id',
                visible: false,
                align: 'center',
                valign: 'middle'
            }, {
                field: 'PlaceName',
                title: '场地名称',
                align: 'center',
                valign: 'middle'
            }, {
                field: 'PeopleNum',
                title: '容纳人数',
                align: 'center',
                valign: 'middle'
            }, {
                title: '操作',
                align: 'center',
                valign: 'middle',
                formatter: function (value, row, index) {
                    return "<button onclick=\"Edit(" + row.Id +
                        ")\" data-toggle='modal' data-target='#EditModal' class=\"btn btn-default btn-sm\">" +
                        "<span class='glyphicon glyphicon-pencil' aria-hidden='true'>修改</span></button>";
                }
            }]
        })
        $("#btn_search").click(function () {
            $('#PlaceList').bootstrapTable('refresh');//刷新Table，Bootstrap Table 会自动执行重新查询
        });
        $("#btn_reset").click(function () {
            $("#txtClassName").val("");
            $("#txtPlaceName").val("");
            $("#txtPlaceNum").val("");
        });
    </script>
    <!--表格加载结束-->
    <!--ajax提交添加场地信息-->
    <script>
        $("#AddPlace").click(function () {
            $.ajax({               //获取场地学校信息
                async: false,
                url: "/Place/GetSchool",
                type: "POST",
                dataType: "JSON",
                success: function (school) {
                    $("#Addchool").empty();
                    for (var i = 0; i < school.length; i++) {
                        if (i == 0) {
                            $("#AddSchool").append("<option value='" + school[i].Id + "' selected='selected'>" + school[i].SchoolName + "</option>")
                        } else {
                            $("#AddSchool").append("<option value='" + school[i].Id + "'>" + school[i].SchoolName + "</option>")
                        }

                    }
                    $.ajax({            //获取场地班级信息
                        async: false,
                        url: "/Place/GetClass",
                        data: { SchoolId: $('#AddSchool').val() },
                        type: "POST",
                        dataType: "JSON",
                        success: function (tempClass) {
                            $("#AddClass").empty();
                            for (var i = 0; i < tempClass.length; i++) {
                                if (i == 0) {
                                    $("#AddClass").append("<option value='" + tempClass[i].Id + "' selected='selected'>" + tempClass[i].ClassName + "</option>")
                                } else {
                                    $("#AddClass").append("<option value='" + tempClass[i].Id + "'>" + tempClass[i].ClassName + "</option>")
                                }

                            }
                        }
                    })
                }
            })

            //学校变更时班级信息变更
            $("#AddSchool").change(function () {
                var schoolId = $("#AddSchool").val();
                $.ajax({
                    async: false,
                    url: "/Place/GetClass?SchoolId = ",
                    data: { schoolId},
                            type: "POST",
                            dataType: "JSON",
                            success: function (tempClass) {
                        $("#AddClass").empty();
                        for (var i = 0; i < tempClass.length; i++) {
                            $("#AddClass").append("<option value='" +tempClass[i].Id + "'>" +tempClass[i].ClassName + "</option>")
                    }
                    }
                    })
                    })


                    })
        //提交场地信息
        $("#AddSubmit").click(function () {
            $.ajax({
                        url: "/Place/AddSave",
                        data: {
                            AddPlaceNum: $("#AddPlaceNum").val(),
                            AddPlaceName: $("#AddPlaceName").val(),
                            AddSex: jQuery('[name="AddSex"]:checked').val(),
                            AddClass: $("#AddClass").val(),
                            AddSchool: $("#AddSchool").val(),
                            AddPlacePWD: $("#AddPlacePWD").val(),
                        },
                type: "POST",
                dataType: "json",
                success: function (result) {
                    $("#AddClose").click();
                    alert(result);
                    $("#PlaceList").bootstrapTable('refresh');
                }
            })
        })

    </script>
    <!--ajax提交添加场地信息结束-->
    <!--向修改模态框添加待编辑场地信息-->
    <script>
        //编辑场地信息
        function Edit(Id) {
            $.ajax({            //获取场地信息
                async: false,
                url: "/Place/GetPlace?Id=",
                data: { Id},
                        type: "POST",
                        dataType: "JSON",
                        success: function (student) {                   //填充场地信息到表单
                    $("#EditId").val(student.Id);
                    $("#EditPlaceNum").val(student.PlaceNum);
                    $("#EditPlaceName").val(student.PlaceName);
                    $("#EditPlacePWD").val(student.PlacePWD);
                    var schoolId = student.School["Id"];
                    var classId = student.Class["Id"];
                            var sex = student.Sex;
                            if (sex == 0) {
                                $('#EditSex1').removeAttr("checked");
                                $('#EditSex0').attr("checked", "checked");
                            } else if (sex == 1) {
                                $('#EditSex0').removeAttr("checked");
                                $('#EditSex1').attr("checked", "checked");
                            }
                            $.ajax({               //获取场地学校信息
                                async: false,
                                url: "/Place/GetSchool",
                                type: "POST",
                                dataType: "JSON",
                                success: function (school) {
                                    $("#EditSchool").empty();
                                    for (var i = 0; i < school.length; i++) {
                                        if (school[i].Id == schoolId) {
                                            $("#EditSchool").append("<option value='" + school[i].Id + "' selected='selected'>" + school[i].SchoolName + "</option>")
                                        } else {
                                            $("#EditSchool").append("<option value='" + school[i].Id + "'>" + school[i].SchoolName + "</option>")
                                        }
                                    }
                                    $.ajax({            //获取场地班级信息
                                        async: false,
                                        url: "/Place/GetClass",
                                        data: { SchoolId: schoolId },
                                        type: "POST",
                                        dataType: "JSON",
                                        success: function (tempClass) {
                                            $("#EditClass").empty();
                                            for (var i = 0; i < tempClass.length; i++) {
                                                if (tempClass[i].Id == classId) {
                                                    $("#EditClass").append("<option value='" + tempClass[i].Id + "' selected='selected'>" + tempClass[i].ClassName + "</option>")
                                                } else {
                                                    $("#EditClass").append("<option value='" + tempClass[i].Id + "'>" + tempClass[i].ClassName + "</option>")
                                                }
                                            }
                                        }
                                    })
                                }
                            })

                        }
            })
        }
        //学校变更时班级信息变更
        $("#EditSchool").change(function () {
            var schoolId = $("#EditSchool").val();
            $.ajax({
                async: false,
                url: "/Place/GetClass?SchoolId = ",
                data: { schoolId},
                        type: "POST",
                        dataType: "JSON",
                        success: function (tempClass) {
                            $("#EditClass").empty();
                            for (var i = 0; i < tempClass.length; i++) {
                                $("#EditClass").append("<option value='" +tempClass[i].Id + "'>" +tempClass[i].ClassName + "</option>")
                }
                }
                })
                })
    </script>
    <!--向修改模态框添加待编辑场地信息结束-->
    <!--ajax提交编辑后的场地信息-->
    <script>
        $("#EditSubmit").click(function () {
            $.ajax({
                url: "/Place/EditSave",
                data: {
                    EditId: $("#EditId").val(),
                    EditPlaceNum: $("#EditPlaceNum").val(),
                    EditPlaceName: $("#EditPlaceName").val(),
                    EditSex: jQuery('[name="EditSex"]:checked').val(),
                    EditClass: $("#EditClass").val(),
                    EditSchool: $("#EditSchool").val(),
                    EditPlacePWD: $("#EditPlacePWD").val(),
                },
                type: "POST",
                dataType: "json",
                success: function (result) {
                    $("#EditClose").click();
                    alert(result);
                    $("#PlaceList").bootstrapTable('refresh');
                }
            })
        })
    </script>
    <!--ajax提交编辑后的场地信息结束-->
    <!--ajax删除场地信息并更新表格-->
    <script>
        $("#DeletePlaces").click(function () {

            var ids = $.map($("#PlaceList").bootstrapTable('getSelections'),
                function (row) {
                    return row.Id;
                })
            if (ids.length <= 0) {
                alert("请选择至少一条的删除记录");
            } else {
                if (confirm("确定删除？")) {
                    $.ajax({
                        url: "/Place/Delete",
                        type: "POST",
                        data: { Ids: ids },
                        dataType: "json",
                        success: function (result) {
                            alert(result);
                            $("#PlaceList").bootstrapTable('refresh');
                        }
                    })
                }
            }
        })
    </script>
    <!--ajax删除场地信息并更新表格结束-->
}
